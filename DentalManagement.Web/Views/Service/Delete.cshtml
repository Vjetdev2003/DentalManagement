@model DentalManagement.DomainModels.Service

@{
    ViewBag.Title = "Xoá dịch vụ";
}
<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" method="post" action="@Url.Action("Delete", "Service", new { id = Model.ServiceId })">
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh thuốc:</label>
                <div class="col-sm-10">
                    <img id="Photo" src="~/images/accounts/@(string.IsNullOrWhiteSpace(Model.Photo) ? "default.png" : Model.Photo)" class="img img-bordered" style="width:200px" />
                    <input type="hidden" name="Photo" value="@Model.Photo" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên dịch vụ:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ServiceName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Giá:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Price</p>
                </div>
            </div> <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Description</p>
                </div>

                   <div class="form-group text-right">
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i>
                        Xóa dữ liệu
                    </button>
                    <a href="~/Service" class="btn btn-default">
                        Quay lại
                    </a>
           @*  <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.ServiceId">
                <button type="submit" class="btn btn-danger fa fa-trash "> Xác nhận xóa</button>
                <a href="@Url.Action("Index")" class="btn btn-default fa fa-default">Quay lại</a>
            </form> *@
        </form>
    </div>
</div>


