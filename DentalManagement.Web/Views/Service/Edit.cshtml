@model DentalManagement.DomainModels.Service
@{
}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" method="post" enctype="multipart/form-data" action="~/Service/Save">
            <input type="hidden" name="ServiceId" value="@Model.ServiceId" />

            <div class="form-group">
                <label class="control-label col-sm-2">Tên dịch vụ:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="@nameof(Model.ServiceName)" autofocus value="@Model.ServiceName" />
                    @Html.ValidationMessageFor(m => m.ServiceName)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="@nameof(Model.Description)" value="@Model.Description" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="@nameof(Model.Price)" value="@Model.Price" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh dịch vụ:</label>
                <div class="col-sm-10">
                    <input type="hidden" name="@nameof(Model.Photo)" value="@Model.Photo" />
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="~/images/accounts/@Model.Photo" class="img img-bordered" style="width:200px" alt="NoPhoto" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Service" class="btn btn-default">Quay lại</a>
                </div>
            </div>
        </form>
    </div>
</div>