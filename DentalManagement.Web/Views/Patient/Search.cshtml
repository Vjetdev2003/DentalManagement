@model DentalManagement.Web.Models.PatientSearchResult
@{
    Layout = null;
}


<div>
    <p style="margin: 10px 0 10px 0">Có <strong>@Model.RowCount</strong> bệnh nhân trong tổng số <strong>@Model.PageCount</strong> trang.</p>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-primary">
                    <th>Tên bệnh nhân</th>
                    <th>Ngày sinh</th>
                    <th>Cao</th>
                    <th>Nặng</th>
                    <th>Giới tính</th>
                    <th>Điện thoại</th>
                    <th>Email</th>
                    <th>Địa chỉ</th>
                    <th style="width: 80px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Patients)
                {
                    <tr>
                        <td>@item.PatientName</td>
                        <td>@item.PatientDOB</td>
                        <td>@item.Height</td>
                        <td>@item.Weight</td>
                        <td class="text-center">@(item.Gender ? "Nam" : "Nữ")</td>
                        <td>@item.Phone</td>
                        <td>@item.Email</td>
                        <td>@item.Address</td>
                        <td class="text-right">
                            <a class="btn btn-info btn-xs" href="~/Patient/Edit/@item.PatientId">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a class="btn btn-danger btn-xs" href="~/Patient/Delete/@item.PatientId">
                                <i class="fa fa-remove"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (Model.PageCount > 1)
    {
        <div class="text-center">
            <ul class="pagination">
                @for (int p = 1; p <= Model.PageCount; p++)
                {
                    if (Model.Page == p)
                    {
                        <li class="active"><a href="#">@p</a></li>
                    }
                    else
                    {
                        <li><a href="javascript:;" onclick="doSearch('#formSearch',@p)">@p</a></li>
                    }
                }
            </ul>
        </div>
    }

</div>


