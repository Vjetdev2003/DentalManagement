@model DentalManagement.DomainModels.Patient
@{
    ViewBag.Title = "Thông Tin Cá Nhân";
    Layout = "_Home";
}

<div class="container-custom mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Tiêu đề -->
            <div class="text-center mb-3">
                <h1 class="page-title">Thông Tin Cá Nhân</h1>
            </div>

            <!-- Thông tin bệnh nhân -->
            <div class="card-custom shadow-sm p-4">
                <div class="text-center">
                    <!-- Ảnh bệnh nhân -->
                    <img class="profile-img"
                         alt="no-photo"
                         src="~/images/accounts/@(string.IsNullOrWhiteSpace(Model.Photo) ? "patient.png" : Model.Photo)">
                </div>
                <table class="custom-table mt-3">
                    <tbody>
                        <tr>
                            <th>Tên Bệnh Nhân:</th>
                            <td>@Model.PatientName</td>
                        </tr>
                        <tr>
                            <th>Ngày Sinh:</th>
                            <td>@Model.PatientDOB.ToString("dd/MM/yyyy")</td>
                        </tr>
                        <tr>
                            <th>Chiều Cao:</th>
                            <td>@Model.Height cm</td>
                        </tr>
                        <tr>
                            <th>Cân Nặng:</th>
                            <td>@Model.Weight kg</td>
                        </tr>
                        <tr>
                            <th>Giới Tính:</th>
                            <td>
                                @(Model.Gender == true ? "Nam" : Model.Gender == false ? "Nữ" : "Chưa xác định")
                            </td>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th>Địa chỉ:</th>
                            <td>@Model.Address</td>
                        </tr>
                    </tbody>
                </table>

                <!-- Nút chỉnh sửa -->
                <div class="form-group text-center mt-3">
                    <a href="~/Patient/Edit/@Model.PatientId" class="btn btn-primary me-2">
                        <i class="fa fa-edit"></i> Chỉnh sửa
                    </a>
                    <a href="~/Account/ChangePassword" class="btn btn-primary">
                        <i class="fa fa-lock"></i> Đổi mật khẩu
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom CSS -->
<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f4f8fb;
    }

    .page-title {
        font-size: 2rem; /* Giảm kích thước tiêu đề */
        font-weight: bold;
        color: #007bff;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
    }

    .card-custom {
        border: none;
        border-radius: 10px;
        background: #ffffff;
    }

    .profile-img {
        width: 120px; /* Giảm kích thước ảnh */
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #007bff;
        box-shadow: 0 3px 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 15px;
    }

    .custom-table {
        width: 100%;
        margin-top: 20px; /* Giảm khoảng cách */
        border-collapse: separate;
        border-spacing: 0 8px;
    }

    .custom-table th,
    .custom-table td {
        padding: 10px 15px; /* Giảm padding */
        text-align: left;
        background: #ffffff;
        border: none;
        font-size: 14px; /* Giảm kích thước chữ */
    }

    .custom-table th {
        font-weight: bold;
        color: #555;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .custom-table td {
        background: #f8f9fa;
        border-radius: 6px; /* Giảm bo góc */
        color: #333;
    }

    .btn {
        padding: 6px 12px; /* Giảm kích thước nút */
        font-size: 14px;
    }
</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Add Bootstrap JavaScript (required for dropdowns) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>