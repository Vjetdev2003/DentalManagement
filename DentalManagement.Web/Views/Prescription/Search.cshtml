@model DentalManagement.Web.Models.PrescriptionSearchResult

@{
    Layout = null;
}


<div>
    <p style="margin: 10px 0 10px 0">Có <strong>@Model.RowCount</strong> hoá đơn trong tổng số <strong>@Model.PageCount</strong> trang.</p>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-primary">
                    <th class="text-center">Họ và tên</th>
                    <th class="text-center">Nha sĩ kê đơn</th>
                    <th class="text-center">Chẩn đoán</th>
                    <th class="text-center">Liều lượng</th>
                    <th class="text-center">Tần suất</th>
                    <th class="text-center">Trong thời gian</th>
                    <th class="text-center">Lưu ý</th>
                    <th style="width: 80px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Prescriptions)
                {
                    <tr>
                        <td>@item.Patient?.PatientName</td>
                        <td>@item.Dentist?.DentistName</td>
                        <td>@item.Diagnosis</td>
                        <td>@item.Dosage</td>
                        <td>@item.Frequency</td>
                        <td>@item.Duration</td>
                        <td>@item.Notes</td>
                        <td class="text-right">
                            <a class="btn btn-info btn-xs" href="~/Prescription/Details/@item.PrescriptionId">
                                <i class="glyphicon glyphicon-list"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (Model.PageCount > 1)
    {
        <div class="text-center">
            <ul class="pagination">
                @for (int p = 1; p <= Model.PageCount; p++)
                {
                    if (Model.Page == p)
                    {
                        <li class="active"><a href="#">@p</a></li>
                    }
                    else
                    {
                        <li><a onclick="paginationSearch('#formSearch',@p)">@p</a></li>
                    }
                }
            </ul>
        </div>
    }

</div>


