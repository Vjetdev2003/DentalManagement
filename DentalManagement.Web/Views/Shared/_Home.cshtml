<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DentCare</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap">
    <link rel="icon" type="image/x-icon" href="~/Themes/favicon1.ico" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        .container{
          max-width:100%;
          max-height:100%;
          display:contents;
        }
        body {
            font-family: 'Roboto', sans-serif;
        }

        .navbar {
            background: linear-gradient(to right, #007bff, #00bfff);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .navbar-nav .nav-link {
            color:white;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
            color: white;
        }

        .hero-section {
            background: linear-gradient(to right, #007bff, #00bfff);
            color: white;
            padding: 50px 20px;
            text-align: center;
        }

            .hero-section img {
                border-radius: 10px;
                max-width: 100%;
                height: auto;
            }

        .btn.btn-primary {
            color: #007bff; /* Màu chữ xanh */
            background-color: #ffffff; /* Màu nền trắng */
            border: 2px solid #007bff; /* Thêm viền xanh (2px) */
            padding: 10px 20px; /* Điều chỉnh padding để thu ngắn nút */
            text-align: left; /* Căn trái nội dung trong nút */
            display: inline-block; /* Đảm bảo nút không chiếm toàn bộ chiều ngang */
            border-radius: 25px;
            width:160px;
            font-size:16px;
        }

           /*  /* Hiệu ứng khi hover */
            .btn.btn-primary:hover {
                color: #ffffff; /* Màu chữ trắng khi hover */
                background-color: dimgray; /* Màu nền xanh khi hover */
                border-color: #007bff; /* Màu viền xanh khi hover */
            } */

    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" href="/Home">
                <img src="~/Themes/favicon1.ico" alt="VietClinic Icon" width="30" height="30" /> VietClinic
            </a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Appointment/Create">Đặt lịch</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Appointment/Create">Liên hệ</a>
                    </li>
                    <div class="navbar-custom-menu">
                        <ul class="nav navbar-nav">
                            @{
                                var userData = User.GetUserData(); // Lấy dữ liệu người dùng từ cookies hoặc session

                                if (userData != null)
                                {
                                    // Nếu đã đăng nhập, hiển thị menu người dùng
                                    <li class="dropdown user user-menu">
                                        <a href="#" class="dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                            <img src="~/images/accounts/@userData.Photo" class="user-image" alt="User Image" width="30" height="30">
                                            <span class="hidden-xs">@userData.DisplayName</span>
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="userDropdown">

                                            <!-- Menu Footer-->
                                            <li class="user-footer">
                                                <div class="pull-left">
                                                    <a href="~/Patient/Detail/@userData.UserId " class="btn btn-default btn-flat">Tài khoản</a>
                                                </div>
                                                <div class="pull-right">
                                                    <a href="~/Account/Logout" class="btn btn-default btn-flat">Đăng Xuất</a>
                                                </div>
                                            </li>
                                        </ul>
                                    </li>
                                }
                                else
                                {
                                    // Nếu chưa đăng nhập, hiển thị liên kết đăng nhập
                                    <li class="dropdown user user-menu">
                                        <a href="~/Account/Login">
                                            <span class="hidden-xs">Đăng Nhập</span>
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
