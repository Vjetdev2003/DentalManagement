<header class="main-header">
    <!-- Logo -->
    <a href="~/Themes/index2.html" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>Viet</b></span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><b>Viet</b>Clinic</span>
    </a>

    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>

        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                
                <!-- User Account: style can be found in dropdown.less -->
                @{
                    var userData = User.GetUserData();

                    <li class="dropdown messages-menu" id="messageDropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-envelope-o"></i>
                            <span class="label label-success" id="newMessageCount">0</span>
                        </a>
                        <ul class="dropdown-menu" id="messageList">
                            <li class="header" id="messageHeader">You have 0 messages</li>
                            <ul class="menu" id="messageItems">
                                <!--<li>
              
                                        <span id="messageContent">Bệnh nhân [tên] với số Điện thoại [số điện thoại] với tin nhắn: [tin nhắn] cần tư vấn và hỗ trợ.</span>

                                </li>-->
                            </ul>
                        </ul>
                    </li>
                    if (userData != null)
                    {
                        <li class="dropdown user user-menu">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <img src="~/images/accounts/@userData.Photo" class="user-image" alt="User Image">
                                    <span class="hidden-xs">@userData.DisplayName</span>
                                </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <img src="~/images/accounts/@userData.Photo" class="img-circle" alt="User Image">
                                    <p>
                                        @userData.DisplayName
                                    </p>
                                </li>
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="~/Account/ChangePassword" class="btn btn-default btn-flat">Đổi Mật Khẩu</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="~/Account/Logout" class="btn btn-default btn-flat">Đăng Xuất</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="dropdown user user-menu">
                            <a href="~/Account/Login">
                                <span class="hidden-xs">Đăng Nhập</span>
                            </a>
                        </li>
                    }
                }
            </ul>
        </div>
    </nav>
</header>
