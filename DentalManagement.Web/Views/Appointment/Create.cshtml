@model DentalManagement.Web.Models.AppointmentViewModel

@{
    ViewBag.Title =  "Tạo mới lịch hẹn";
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Họ và tên</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.PatientName" required />
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
    </div>

    <div class="form-group">
        <label for="PhoneNumber">Số điện thoại</label>
        <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" value="@Model.Phone" required />
    </div>

    <div class="form-group">
        <label for="AppointmentDate">Ngày giờ hẹn</label>
        <input type="datetime-local" class="form-control" id="AppointmentDate" name="AppointmentDate" value="@Model.AppointmentDate.ToString("yyyy-MM-ddTHH:mm")" required />
    </div>

    <div class="form-group">
        <label for="Notes">Ghi chú</label>
        <textarea class="form-control" id="Notes" name="Notes">@Model.Notes</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Đặt lịch</button>
</form>