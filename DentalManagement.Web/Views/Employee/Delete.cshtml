@model DentalManagement.DomainModels.Employee

@{
    ViewBag.Title = "Xóa nhân viên";
}

<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" method="post" action="@Url.Action("Delete", "Employee", new { id = Model.EmployeeId })">
            <div class="form-group">
                <label class="control-label col-sm-2">Họ và tên:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.FullName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.DateOfBirth.ToString("dd/MM/yyyy")</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Address</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Phone</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Email</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh:</label>
                <div class="col-sm-10">
                    <img id="Avatar" src="~/images/accounts/@(string.IsNullOrWhiteSpace(Model.Avatar) ? "default.png" : Model.Avatar)" class="img img-bordered" style="width:200px" />
                    <input type="hidden" name="Avatar" value="@Model.Avatar" />
                </div>
            </div>

            <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.EmployeeId">
                <button type="submit" class="btn btn-danger fa fa-trash "> Xác nhận xóa</button>
                <a href="@Url.Action("Index")" class="btn btn-default fa fa-default">Quay lại</a>
            </form>
        </form>
    </div>
</div>
