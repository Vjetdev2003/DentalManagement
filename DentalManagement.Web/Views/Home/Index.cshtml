                <script>
                    $('#appointmentForm').submit(function (e) {
                        e.preventDefault(); // Ngừng hành động mặc định (gửi form)

                        var formData = $(this).serialize(); // Lấy dữ liệu của form
                        var submitButton = $(this).find('button[type="submit"]');
                        submitButton.prop('disabled', true); // Disable the submit button
                        submitButton.text('Đang gửi...'); // Change button text to "Đang gửi..."

                        $.ajax({
                            url: '/Appointment/Submit', // URL của action trong Controller
                            type: 'POST', // Phương thức gửi (POST)
                            data: formData, // Dữ liệu gửi đi
                            success: function (response) {
                                if (response.success) {
                                    // Hiển thị thông báo thành công
                                    $('#appointmentMessage').css('display', 'block');
                                    $('#appointmentMessage').html('Lịch hẹn đã được đặt thành công!');
                                    $('#appointmentMessage').removeClass('text-danger').addClass('text-success');
                                    $('#appointmentForm')[0].reset();
                                } else if (response.message) {
                                    // Hiển thị thông báo nếu lịch trùng
                                    $('#appointmentMessage').css('display', 'block');
                                    $('#appointmentMessage').html(response.message);
                                    $('#appointmentMessage').removeClass('text-success').addClass('text-danger');

                                    // Hiển thị các khung giờ trống thay thế
                                    if (response.availableSlots && response.availableSlots.length > 0) {
                                        var slotSuggestions = '<ul>';
                                        response.availableSlots.forEach(function (slot) {
                                            slotSuggestions += `<li>Khung giờ: ${slot}</li>`;
                                        });
                                        slotSuggestions += '</ul>';
                                        $('#appointmentMessage').append(slotSuggestions);
                                    }

                                    $('#appointmentMessage').append(`<p>${response.suggestion}</p>`);
                                } else {
                                    // Nếu có lỗi không phải trùng lịch
                                    $('#appointmentMessage').html(response.error);
                                    $('#appointmentMessage').removeClass('text-success').addClass('text-danger');
                                }
                            },
                            error: function (xhr, status, error) {
                                // Xử lý lỗi nếu có lỗi trong quá trình gửi AJAX
                                $('#appointmentMessage').html('Có lỗi xảy ra khi gửi lịch hẹn: ' + error);
                                $('#appointmentMessage').removeClass('text-success').addClass('text-danger');
                            },
                            complete: function () {
                                // Kích hoạt lại nút gửi sau khi gửi yêu cầu xong (kể cả thành công hay lỗi)
                                submitButton.prop('disabled', false); // Kích hoạt lại nút gửi
                                submitButton.text('Gửi Lịch Hẹn'); // Khôi phục lại chữ trên nút
                            }
                        });
                    });

                </script>
