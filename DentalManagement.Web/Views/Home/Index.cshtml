<script>
    $("#submitAppointment").on("click", function () {
        console.log("Button clicked!"); // Kiểm tra nút đã click
        var formData = $("#appointmentForm").serialize();
        console.log("Form Data:", formData); // Kiểm tra dữ liệu từ form

        $.ajax({
            url: '/Appointment/Submit',
