@using System.Web
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Viet Clinic - Đăng nhập</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/themes/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/themes/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/themes/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/themes/dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/themes/plugins/iCheck/square/blue.css">


    <link rel="icon" type="image/x-icon" href="~/Themes/favicon1.ico" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!--<img src="~/images/accounts/638678792795628463_clinnic.png" alt="Viet Clinic Icon"> -->
    <!-- Google Font -->
    @* <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic"> *@
</head>
<body class="hold-transition login-page">

    <div class="login-box">
        <div class="login-logo">
            <a><img src="~/images/accounts/viet.png" width="45" height="45" alt="Viet Clinic Icon"><b>Viet</b> Clinic</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Đăng nhập hệ thống</p>

            <form action="~/Account/Login" method="post" id="login-form">
                @Html.AntiForgeryToken()
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Tên đăng nhập" name="username" value="@ViewBag.UserName">
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Mật khẩu" name="password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">

                    <div class="col-xs-8">
                        <label>
                            <input type="checkbox"> Nhớ mật khẩu
                        </label>
                    </div>
                    <div class="col-xs-4 ml-n5">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Đăng nhập</button>
                    </div>
                </div>
                <div class="social-auth-links text-center">
                   @*  <p>- OR -</p>
                    <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                        <i class="fa fa-facebook"></i> Sign in using
                        Facebook
                    </a>
                    <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                        <i class="fa fa-google-plus"></i> Sign in using
                        Google+
                    </a> *@

                    <a href="~/Account/Register" class="text-center">Đăng ký</a>
                </div>
            </form>
        </div>
        <!-- /.login-box-body -->
    </div>
        <style >
       img{
           max-width:100%;
       }
    </style>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/themes/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/themes/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/themes/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });
        $(document).ready(function () {
            var loginError = '@HttpUtility.JavaScriptStringEncode(TempData["LoginError"] as string)'; // Mã hóa đúng trong JavaScript

            if (loginError) {
                alert(loginError);
            }

            $('#login-form').submit(function (e) {
                var username = $('input[name="username"]').val().trim();
                var password = $('input[name="password"]').val().trim();

                if (!username || !password) {
                    e.preventDefault();  // Ngừng gửi form
                    alert('Vui lòng nhập tên đăng nhập và mật khẩu');
                }
            });
        });
    </script>
</body>
</html>

