@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>VietClinic - Đăng ký</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="~/themes/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/themes/bower_components/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/themes/bower_components/Ionicons/css/ionicons.min.css">
    <link rel="stylesheet" href="~/themes/dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="~/themes/plugins/iCheck/square/blue.css">
    <link rel="icon" type="image/x-icon" href="~/Themes/favicon1.ico" />
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <b> <img src="~/images/accounts/viet.png" width="45" height="45" alt="Viet Clinic Icon">VietClinic</b>
        </div>
       
        <div class="login-box-body">
            
            <p class="login-box-msg"><strong>Đăng ký tài khoản mới</strong></p>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }
            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success">
                    @ViewBag.SuccessMessage
                </div>
            }
            <form action="~/Account/Register" method="post">
                @Html.AntiForgeryToken()
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Họ và tên" name="userName" required>
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Email" name="email" required>
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Mật khẩu" name="password" required>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Xác nhận mật khẩu" name="confirmPassword" required>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group">
                    <div>
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Đăng ký</button>
                    </div>
                </div>
            </form>
            <div class="text-center"><a href="~/Account/Login" class="text-center ">Tôi đã có tài khoản</a></div>
            
            
        </div>
    </div>
    <script src="~/themes/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="~/themes/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/themes/plugins/iCheck/icheck.min.js"></script>
</body>
</html>
